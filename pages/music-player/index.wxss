/* pages/music-player/index.wxss */
.bg-image, .bg-cover{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* * 只有 position的元素才能设置z-index */
  z-index: -1;
}

.bg-cover {
  background-color: rgba(0,0,0,.5);
  backdrop-filter: blur(60px);
}

/* 导航 */
.tab {
  display: flex;
  font-size: 28rpx;
  color: #999
}

.tab .divider {
  margin: 0 10rpx;
}

.tab .active {
  color: #fff
}