/* pages/home-music/index.wxss */
.van-search__content {
  background-color: white !important
}
.van-search {
  padding: 20rpx 0 !important;
}

page {
  padding: 0 20rpx 50px;
}
.swiper {
  border-radius: 12rpx;
  overflow: hidden;
  /* webview bug可能 修复方案 */
  transform: translateY(0);
}

.swiper-item {
  /* 去除图片底部3px */
  display: flex;
}

.swiper-item image {
  width: 100%;
}


.play-bar {
  display: flex;
  justify-content: space-between;
  position: fixed;
  left:0;
  right:0;
  bottom: 0;
  padding:0 8px;
  height: 44px;

  box-shadow: 0 -1px 5px rgba(0,0,0,0.1);
  background-color: white;
}

.play-bar .left, .right {
    display: flex;
    align-items: center;
}

.play-bar .album {
  position: relative;
  top: -8px;
  width: 44px;
  height: 44px;
  border-radius: 50%;
}

.play-bar .left .name {
  font-size: 14px;
  margin-left: 10rpx;
}

.play-bar .right .icon {
  width: 30px;
  height: 30px;
}

.play-bar .right .play {
  width: 25px;
  height: 25px;
  margin-right: 10rpx;
}

.album-animation {
  animation: rotate 16s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg)
  }
  to {
    transform: rotate(360deg);
  }
}